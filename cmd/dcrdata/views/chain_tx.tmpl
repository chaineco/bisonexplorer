{{define "chain_tx"}}
<!DOCTYPE html>
{{$ChainType := .ChainType}}
{{$conv := .Conversions}}
<html lang="en">
{{template "html-head" headData .CommonPageData (printf "%s Transaction - %.20s..." (chainName $ChainType) .Data.TxID)}}
{{template "mutilchain_navbar" . }}
{{with .Data}}
<div class="container mt-3" data-controller="time tx" data-tx-txid="{{.TxID}}">
   <nav class="breadcrumbs mt-0">
      <a href="/" class="breadcrumbs__item no-underline ps-2">
         <span class="homeicon-tags me-1"></span>
         <span class="link-underline">Homepage</span>
      </a>
      <a href="/{{$ChainType}}" class="breadcrumbs__item item-link">{{chainName $ChainType}}</a>
      <span class="breadcrumbs__item is-active">Transaction</span>
   </nav>
   {{$isMempool := .InPool}}
   <div class="row px-1 my-2">
      <div class="col-24 col-xl-12 bg-green-3 p-3 p-sm-4 position-relative common-card">
         <div class="card-pointer pointer-right d-none d-xl-block"></div>
         <div class="card-pointer pointer-bottom d-xl-none"></div>
         <div class="pb-1 ps-1 d-flex ai-center">
            <img src="/images/{{$ChainType}}-icons.png" width="20" height="20">
            <div class="d-inline-block confirmations-box mx-2 fs14" {{if ne $ChainType "xmr" }}
               data-controller="newblock" data-newblock-target="confirmations" data-tx-target="confirmations"
               data-confirmations="{{.Confirmations}}" data-yes="# confirmation@" data-no="unconfirmed"
               data-confirmation-block-height="{{if eq .Confirmations 0}}-1{{else}}{{.BlockHeight}}{{end}}" {{end}}>
               {{.Confirmations}} confirmations
            </div>
            {{if $.SwapsFound}}
            {{if and .SwapsList (gt (len .SwapsList) 0)}}
            <div class="d-inline-block text-white br-10 {{.SwapsType}}-bg px-2 mx-2 fs14">
               <div class="d-flex ai-center">
                  <div class="p-relative d-flex ai-center pair-icons">
                     <img src="/images/{{$ChainType}}-icons.png" width="20" height="20">
                     <img src="/images/dcr-icon-notran.png" width="20" height="20" class="second-pair">
                  </div>
                  <p>{{toUpperCase $ChainType}}/DCR&nbsp;{{$.SwapsFound}}</p>
               </div>
            </div>
            {{else}}
            <div class="d-inline-block text-white px-2 mx-2 fs14">{{$.SwapsFound}}</div>
            {{end}}
            {{end}}
         </div>
         <div class="text-start lh1rem py-2">
            <div class="fs13 text-secondary pb-1">Transaction ID</div>
            <div class="d-inline-block fs14 break-word rounded medium-sans clipboard">{{.TxID}}{{template
               "copyTextIcon"}}</div>
         </div>
         {{if and (eq $ChainType "xmr") (ne .TxPublicKey "")}}
         <div class="text-start lh1rem py-2">
            <div class="fs13 text-secondary pb-1">Tx public key</div>
            <div class="d-inline-block fs14 break-word rounded medium-sans clipboard">{{.TxPublicKey}}{{template
               "copyTextIcon"}}</div>
         </div>
         {{end}}
         <div class="row py-2">
            <div class="col-8 text-start">
               <span class="text-secondary fs13">Total Sent</span>
               <br>
               <span class="lh1rem d-inline-block pt-1">
                  <span class="fs18 fs14-decimal fw-bold">
                  {{if eq $ChainType "xmr"}}
                     {{if gt .TotalSent 0.0}}
                     {{template "decimalParts" (float64AsDecimalParts .TotalSent 8 true 2)}}
                     {{else}}
                     N/A
                     {{end}}
                  {{else}}
                     {{template "decimalParts" (float64AsDecimalParts .Total 8 true 2)}}
                  {{end}}
                  </span>
                  <span class="text-secondary fs14">&nbsp;{{toUpperCase $ChainType}}</span>
               </span>
               {{if $conv.Total}}
               <br>
               <div class="lh1rem d-inline-block text-secondary"><span
                     class="fs16 lh1rem d-inline-block text-nowrap">{{threeSigFigs $conv.Total.Value}}
                     <span class="fs14">{{$conv.Total.Index}}</span>
                  </span>
                  <span class="fs12">(today)</span>
               </div>
               {{end}}
            </div>
            <div class="col-8 tx-block-num">
               <span class="text-secondary fs13"><span class="d-none d-sm-inline">Included in Block</span><span
                     class="d-sm-none">Block #</span></span>
               <br>
               <span class="fs18 fw-bold lh1rem d-inline-block pt-1">
                  {{if $isMempool}}
                  <span><span class="mp-unconfirmed-msg">mempool</span><a href=""
                        class="fs18 mp-unconfirmed-link"></a></span>
                  {{else}}
                  <div class="fs18">
                     <a href="/{{$ChainType}}/block/{{.BlockHeight}}" class="fs18">{{.BlockHeight}}</a>
                  </div>
                  {{end}}
               </span>
               <br>
               <span class="fs16 text-secondary lh1rem  d-inline-block jsonly"><span class="mp-unconfirmed-time"
                     data-time-target="age" data-age="{{.Time.UNIX}}"></span> ago</span>
            </div>
            <div class="col-8 text-start">
               <span class="text-secondary fs13">Fee</span>
               <br>
               <span class="lh1rem d-inline-block pt-1"><span class="fs18 fs14-decimal fw-bold">{{template
                     "decimalParts"
                     (float64AsDecimalParts .FeeCoin 8 true 2)}}</span><span
                     class="text-secondary fs14">&nbsp;{{toUpperCase $ChainType}}</span>
               </span>
               {{if $conv.Fees}}
               <br>
               <span class="text-secondary fs16 lh1rem d-inline-block">{{threeSigFigs $conv.Fees.Value}}
                  <span class="fs14 lh1rem  d-inline-block">{{$conv.Fees.Index}} <span
                        class="fs12">(today)</span></span>
               </span>
               {{end}}
            </div>
         </div>
      </div>
      <div class="col-24 col-xl-12 py-3 px-3 px-xl-4 d-flex flex-column justify-content-between blue-card">
         <div class="h6 d-inline-block my-2 ps-3">Transaction Details</div>
         <table class="w-100 fs14 my-1 mb-xl-3">
            <tbody>
                {{if ne $ChainType "xmr"}}
                  <tr>
                     <td class="text-end medium-sans text-nowrap pe-2 py-2">Raw Tx:</td>
                     <td class="text-start py-1" colspan="3">
                        <a href="/api/tx/decoded/{{$ChainType}}/{{.TxID}}?indent=true" class="c-green"
                        data-turbolinks="false">decoded</a>
                     &middot;
                        <a href="/api/tx/hex/{{$ChainType}}/{{.TxID}}" class="c-green" data-turbolinks="false">hex</a>
                     </td>
                  </tr>
                {{else}}
                {{if eq .Coinbase false}}
                  <tr>
                     <td class="text-end medium-sans text-nowrap pe-2 py-2">RingCT/type:</td>
                     <td class="text-start py-1" {{if eq .RingCT false}}colspan="3"{{end}}>
                        {{if .RingCT}}yes/{{.Rct.RctType}}{{else}}no{{end}}
                     </td>
                     {{if .RingCT}}
                     <td class="text-end medium-sans text-nowrap pe-2 py-2">Ring Size:</td>
                     <td class="text-start py-1">{{.RingSize}}</td>
                     {{end}}
                  </tr>
                {{end}}
                {{end}}
               <tr>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Time:</td>
                  <td class="text-start py-1" data-tx-target="formattedAge">{{.Time.String}}</td>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Version:</td>
                  <td class="text-start py-1">{{.Version}}</td>
               </tr>
               <tr>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Size:</td>
                  <td class="text-start py-1" colspan="3">{{.FormattedSize}}</td>
               </tr>
               {{if eq $isMempool false}}
               <tr>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Block Hash:</td>
                  <td class="text-start py-1" colspan="3">{{.BlockHash}}</td>
               </tr>
               {{end}}
               {{if and (eq $ChainType "xmr") (ne .ExtraRaw "")}}
               <tr>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Extra:</td>
                  <td class="text-start break-word py-1" colspan="3">{{.ExtraRaw}}</td>
               </tr>
               {{end}}
               {{if $.SwapsFound}}
               <tr>
                  <td class="text-end medium-sans text-nowrap pe-2 py-2">Swaps Info:
                  </td>
                  <td class="text-start py-1 text-secondary"><a class="c-green"
                        href="/api/tx/swaps/{{$ChainType}}/{{.TxID}}?indent=true" data-turbolinks="false">swaps</a>
                  </td>
               </tr>
               {{end}}
            </tbody>
         </table>
         <span></span>{{/* dummy for flex alignment */}}
      </div>
   </div>
   {{if and (eq $ChainType "xmr") (eq .Coinbase false)}}
   {{if .RingCT}}
   <div class="row px-1 my-2" data-controller="xmrtx" data-xmrtx-txid="{{.TxID}}">
      <div class="tx-tools common-card">
         <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#decode-outputs" aria-controls="decode-outputs" role="tab"
                  data-toggle="tab">Decode outputs</a></li>
            <li role="presentation" class=""><a href="#prove-sending" aria-controls="prove-sending" role="tab"
                  data-toggle="tab">Prove sending</a></li>
         </ul>
         <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="decode-outputs">
               <div data-xmrtx-target="decodePanel">
                  <p class="fs-16 mb-0">Check which outputs belong to given Monero address and viewkey</p>
                  <div class="mt-2">
                     <input type="text" data-xmrtx-target="inputAddress" placeholder="Monero address"
                        name="xmr_address">
                  </div>
                  <div class="mt-2">
                     <input type="text" data-xmrtx-target="inputViewKey" placeholder="View key" name="viewkey">
                  </div>
                  <p class="fs-13 mb-0 my-1 c-red d-none" data-xmrtx-target="decodeOuputsMsg"></p>
                  <button type="button" data-action="click->xmrtx#handlerDecodeOutputs"
                     class="btn-explorer mt-2">Decode outputs</button>
               </div>
               <div data-xmrtx-target="decodeResult" class="d-none">
                  <p class="fs-15 mb-0">Checking which outputs belong to the given address and viewkey</p>
                  <p class="fs-13">Address: <span data-xmrtx-target="decodeAddressRes"></span></p>
                  <p class="fs-13">Viewkey: <span data-xmrtx-target="viewkeyRes"></span></p>
                  <p>Sum XMR from matched outputs: <span data-xmrtx-target="totalDecodeAmount"></span> XMR</p>
                  <button type="button" data-action="click->xmrtx#backToDecodeInputs"
                     class="btn-explorer mt-2">Back</button>
               </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="prove-sending">
               <div data-xmrtx-target="provePanel">
                  <p class="fs-16 mb-0">Prove to someone that you send them Monero in this transaction</p>
                  <p class="fs-13 my-0">Tx private key can be obtained using <i>get_tx_key</i>
                     command in <i>monero-wallet-cli</i> command line tool</p>
                  <div class="mt-2">
                     <input type="text" data-xmrtx-target="inputTxPrivateKey" placeholder="Tx private key"
                        name="txprvkey">
                  </div>
                  <div class="mt-2">
                     <input type="text" data-xmrtx-target="inputReceiptAddress" placeholder="Recipient's Monero address"
                        name="repaddress">
                  </div>
                  <p class="fs-13 mb-0 my-1 c-red d-none" data-xmrtx-target="proveTxMsg"></p>
                  <button type="button" data-action="click->xmrtx#handlerProveTx"
                     class="btn-explorer mt-2">Prove</button>
               </div>
               <div data-xmrtx-target="proveResult" class="d-none">
                  <p class="fs-15 mb-0">Prove that you send this tx to the given address</p>
                  <p class="fs-13">Address: <span data-xmrtx-target="proveAddressRes"></span></p>
                  <p class="fs-13">Tx private key: <span data-xmrtx-target="txKeyRes"></span></p>
                  <p>Sum XMR from matched outputs: <span data-xmrtx-target="totalProveAmount"></span> XMR</p>
                  <button type="button" data-action="click->xmrtx#backToProveInputs"
                     class="btn-explorer mt-2">Back</button>
               </div>
            </div>
         </div>
      </div>
   </div>
   {{end}}
   {{end}}
   {{if ne $ChainType "xmr"}}
   <div class="row mb-3">
      <div class="col-lg-12 mt-4 mb-2">
         <h5 class="pb-2">{{len .MutilchainVin}} Input{{if gt (len .MutilchainVin) 1}}s{{end}} Consumed</h5>
         <div class="br-8 b--def bgc-plain-bright pb-10">
            <div class="btable-table-wrap maxh-none">
               <table class="btable-table w-100">
                  <thead>
                     <tr class="bg-none">
                        <th class="shrink-to-fit">#</th>
                        <th class="text-nowrap">Previous Outpoint</th>
                        <th class="addr-hash-column">Addresses</th>
                        <th class="text-center shrink-to-fit">Block</th>
                        <th class="text-end shrink-to-fit">{{toUpperCase $ChainType}}</th>
                     </tr>
                  </thead>
                  <tbody class="bgc-white">
                     {{range .MutilchainVin}}
                     <tr>
                        <td class="shrink-to-fit">{{.Index}}</td>
                        <td class="position-relative clipboard">
                           {{if .TextIsHash}}
                           {{template "hashElide" (hashlink .DisplayText (print "/" $ChainType "/tx/" .Txid))}}
                           {{else}}
                           {{.DisplayText}}
                           {{end}}
                        </td>
                        <td class="position-relative clipboard">
                           {{if gt (len .Addresses) 0}}
                           {{range .Addresses}}
                           {{template "hashElide" (hashlink . (print "/" $ChainType "/address/" .))}}
                           {{end}}
                           {{else}}
                           N/A
                           {{end}}
                        </td>
                        <td class="shrink-to-fit">
                           {{if eq .BlockHeight 0}}
                           pending
                           {{else}}
                           <a href="/{{$ChainType}}/block/{{.BlockHeight}}">{{.BlockHeight}}</a>
                           {{end}}
                        </td>
                        <td class="mono fs13 text-end shrink-to-fit">{{if lt .AmountIn 0.0}} N/A {{else}}
                           {{template "decimalParts" (float64AsDecimalParts .AmountIn 8 false)}} {{end}}
                        </td>
                     </tr>
                     {{end}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
      <div class="col-lg-12 mt-4">
         <h5 class="pb-2">{{len .Vout}} Output{{if gt (len .Vout) 1}}s{{end}} Created</h5>
         <div class="br-8 b--def bgc-plain-bright pb-10">
            <div class="btable-table-wrap maxh-none">
               <table class="btable-table w-100">
                  <thead>
                     <tr class="bg-none">
                        <th class="shrink-to-fit">#</th>
                        <th class="addr-hash-column">
                           <div class="ps-1">Address</div>
                        </th>
                        <th class="text-start shrink-to-fit">Type</th>
                        <th class="text-start shrink-to-fit">Spent</th>
                        <th class="text-end shrink-to-fit">{{toUpperCase $ChainType}}</th>
                     </tr>
                  </thead>
                  <tbody class="bgc-white">
                     {{range $i, $v := .Vout}}
                     <tr>
                        <td class="shrink-to-fit">{{.Index}}</td>
                        <td class="position-relative clipboard">
                           {{range .Addresses}}
                           {{template "hashElide" (hashlink . (print "/" $ChainType "/address/" .))}}
                           {{end}}
                        </td>
                        <td class="fs13 break-word shrink-to-fit">
                           {{.Type}}
                        </td>
                        <td class="text-start fs13 shrink-to-fit">{{with $spending := (index $.Data.SpendingTxns $i) }}
                           {{if $spending.Hash}}
                           <a href="/{{$ChainType}}/tx/{{$spending.Hash}}/in/{{$spending.Index}}">{{$v.Spent}}</a>
                           {{else}}
                           {{if gt $v.Amount 0.0}}
                           {{$v.Spent}}
                           {{end}}
                           {{end}}
                           {{end}}
                        </td>
                        <td class="text-end mono fs13">
                           {{template "decimalParts" (float64AsDecimalParts .Amount 8 false)}}
                        </td>
                     </tr>
                     {{end}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   {{else}}
   <div class="row mb-3">
      <div class="col-lg-12 mt-4 mb-2">
         <h5 class="pb-2">{{len .KeyImages}} Input{{if gt (len .KeyImages) 1}}s{{end}} Consumed</h5>
         <div class="br-8 b--def bgc-plain-bright pb-10">
            <div class="btable-table-wrap maxh-none">
               <table class="btable-table w-100">
                  <thead>
                     <tr class="bg-none">
                        <th class="shrink-to-fit">#</th>
                        <th class="text-nowrap">Key Image (click row to expand)</th>
                        <th class="addr-hash-column">Amount (XMR)</th>
                     </tr>
                  </thead>
                  <tbody class="bgc-white">
                     {{if eq .Coinbase true}}
                     <tr>
                        <td class="shrink-to-fit">0</td>
                        <td>Coinbase</td>
                        <td class="mono fs13 text-end shrink-to-fit">
                            {{if gt .TotalSent 0.0}}
                            {{.TotalSent}}
                            {{else}}
                            N/A
                            {{end}}
                        </td>
                     </tr>
                     {{else}}
                     {{range $i, $v := .KeyImages}}
                     <tr class="row-hover cursor-pointer" data-idx="{{$i}}" data-action="click->tx#keyImageRowClick">
                        <td class="shrink-to-fit">{{$i}}</td>
                        <td class="position-relative clipboard">
                           {{$v.DisplayText}}
                        </td>
                        <td class="mono fs13 text-end shrink-to-fit">
                           {{if gt $v.AmountIn 0}}
                           {{toMulFloat64Amount $v.AmountIn $ChainType}}
                           {{else}}
                           N/A
                           {{end}}
                        </td>
                     </tr>
                     {{if gt (len $v.RingCtOuts) 0}}
                     <tr class="d-none" id="ringctOutsTable_{{$i}}">
                        <td colspan="3" class="pt-1">
                           <table class="btable-table">
                              <thead>
                                 <tr class="subtable-header-row">
                                    <th class="shrink-to-fit">#</th>
                                    <th class="text-start shrink-to-fit">block</th>
                                    <th class="text-start shrink-to-fit">stealth address</th>
                                 </tr>
                              </thead>
                              <tbody class="bgc-white">
                                 {{range $ctIdx, $ctout := $v.RingCtOuts}}
                                 <tr class="subtable-data-row">
                                    <td>{{$ctIdx}}</td>
                                    <td class="shrink-to-fit">
                                       <a href="/xmr/block/{{$ctout.Height}}"
                                          data-turbolinks="false">{{$ctout.Height}}</a>
                                    </td>
                                    <td class="shrink-to-fit">
                                       <a href="/xmr/tx/{{$ctout.TxID}}" data-turbolinks="false">{{$ctout.Key}}</a>
                                    </td>
                                 </tr>
                                 {{end}}
                              </tbody>
                           </table>
                        </td>
                     </tr>
                     {{end}}
                     {{end}}
                      {{end}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
      <div class="col-lg-12 mt-4">
         <h5 class="pb-2">{{len .Outputs}} Output{{if gt (len .Outputs) 1}}s{{end}} Created</h5>
         <div class="br-8 b--def bgc-plain-bright pb-10">
            <div class="btable-table-wrap maxh-none">
               <table class="btable-table w-100">
                  <thead>
                     <tr class="bg-none">
                        <th class="shrink-to-fit">#</th>
                        <th class="addr-hash-column">Stealth address</th>
                        <th class="text-start shrink-to-fit">Amount (XMR)</th>
                        <th class="text-start shrink-to-fit">Global Index</th>
                     </tr>
                  </thead>
                  <tbody class="bgc-white">
                     {{$maxGlobalIdx := .MaxGlobalIndex}}
                     {{range $i, $v := .Outputs}}
                     <tr>
                        <td class="shrink-to-fit">{{$i}}</td>
                        <td class="position-relative clipboard">
                           {{$v.Key}}
                        </td>
                        <td class="fs13 break-word shrink-to-fit">
                           {{if gt $v.Amount 0}}
                           {{toMulFloat64Amount $v.Amount $ChainType}}
                           {{else}}N/A{{end}}
                        </td>
                        <td class="text-end mono fs13">
                           {{$v.GlobalIndex}} of {{$maxGlobalIdx}}
                        </td>
                     </tr>
                     {{end}}
                  </tbody>
               </table>
            </div>
         </div>
      </div>
   </div>
   {{end}}
   {{if $.SwapsFound}}
   <div>
      <div class="br-8 b--def bgc-plain-bright pb-10">
         <div class="d-flex ai-center pt-3 pb-1 ps-3">
            <div class="p-relative d-flex ai-center pair-icons">
               <img src="/images/{{$ChainType}}-icons.png" width="20" height="20">
               <img src="/images/dcr-icon-notran.png" width="20" height="20" class="second-pair">
            </div>
            <h5>Swap Details</h5><span
               class="common-label px-2 text-white ms-2 {{if $.IsRefund}}refund{{else}}redemption{{end}}-bg fw-400 fs13">{{if
               $.IsRefund}}Refund{{else}}Redemption{{end}}</span>
         </div>
         <a href="/decred/atomic-swaps" class="link-underline fs14 ms-5">All Atomic Swaps</a>
         <div class="position-relative">
            {{template "atomicSwapsTable" .}}
         </div>
      </div>
   </div>
   {{end}}
</div>
{{end}}
{{ template "footer" . }}
</body>

</html>
{{end}}