{{define "home" -}}
<!DOCTYPE html>
<html lang="en">
   {{ template "html-head" headData .CommonPageData "Mutilple Blockchains Explorer by blockcare.pro"}}
   {{ template "home_navbar" . }}
   <div class="main-container homepage-class" data-controller="time"
      >
      <div class="hp-header-wrap area"></div>
      <!-- start explorer wrap -->
      <div class="hp-explore-wrap" id="hp-explore-wrap">
         <div class="container">
         <h2 class="fs-30 fw-600 mt-3"> Supported Blockchains</h2>
            <section>
               <h2 class="fs-40 fw-600 d-none"> Blocks Explorer</h2>
               <div class="hp-explore__cards-wrap mt-3">
                  <div class="hp-explore__cards-content-2-1 home-chain-card">
                    {{range .HomeInfoList}}
                     <div class="info-right-card">
                        <!-- Start Blocks Card -->
                        <div class="explore-card-wrap">
                           <div class="explore-card-content">
                              <a href='{{if eq .Chain "dcr"}}/decred{{else}}/chain/{{.Chain}}{{end}}' class="link-to-subpage">
                                 <div class="explore-card__header">
                                    <span class="homeicon-block explore-card__header__logo" alt="bitcoin logo" loading="lazy"></span>
                                    <div class="explore-card__header__text ml-15">
                                       <h5 class="explore-card__header__text__name"> {{chainName .Chain}} </h5>
                                       <span class="explore-card__header__arrow">
                                       <span class='the-arrow -right'>
                                       <span class='shaft'></span>
                                       </span>
                                       </span>
                                       {{if .ExchangeRate}}
                                       <div class="explore-card__header__text__price">
                                          <div class="price-wrap d-flex ai-center">
                                             <span>{{.ExchangeRate.TwoDecimals}}&nbsp;</span>
                                             <span class="info-line-2-sub">{{.ExchangeRate.Index}}</span>
                                          </div>
                                       </div>
                                       {{end}}
                                    </div>
                                 </div>
                              </a>
                              <div class="explore-card__values-content">
                                 <div class="row justify-content-between">
                                    <div class="col-12">
                                       <p class="network-stats-block">
                                          <span class="network-stats-title">Lastest Block</span>
                                          <span class="network-stats-content d-inline-block mt-4">
                                          <a class="fs-28" href="/chain/{{.Chain}}/block/{{.BestBlock.Hash}}">{{.BestBlock.Height}}</a>
                                          </span>
                                       </p>
                                    </div>
                                    <div class="col-12">
                                       <div class="network-stats-block">
                                          <span class="network-stats-title">
                                          <a class="link-hover-underline" href="/chain/{{.Chain}}/charts?chart=pow-difficulty">
                                          Difficulty</a>
                                          </span>
                                          <div class="network-stats-content d-inline-block mt-4">
                                             {{template "decimalParts" (float64AsDecimalParts (divideFloat .HomeInfo.Difficulty 1.0) 0 true)}}
                                          </div>
                                       </div>
                                    </div>
                                    <div class="col-12">
                                       <p class="network-stats-block">
                                          <span class="network-stats-title">Age</span>
                                          <span class="network-stats-content d-inline-block mt-4"
                                           data-type="age" class="jsonly" 
                                           data-time-target="age" 
                                           data-age="{{.BestBlock.BlockTime.UNIX}}">{{.BestBlock.BlockTime}}</span>
                                       </p>
                                    </div>
                                    <div class="col-12">
                                       <p class="network-stats-block">
                                          <span class="network-stats-title">Size</span>
                                          <span class="network-stats-content d-inline-block mt-4">{{.BestBlock.FormattedBytes}}</span>
                                       </p>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                        <!-- End Blocks Card -->
                     </div>
                     {{end}}
                  </div>
               </div>
            </section>
         </div>
      </div>
      <!--end block 2 -->
   </div>
   {{  template "footer_embed" . }}
   </body>
</html>
{{- end}}